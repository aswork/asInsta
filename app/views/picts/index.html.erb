<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p><%= notice %></p>

<h1>投稿一覧</h1>

<%= link_to "新しく投稿する", new_pict_path, class: 'btn btn-default' %>
<br><br>

<% @picts.each do |pict| %>
<br />
<div class="row2">
<p><%= profile_img(pict.user) %>&emsp;<%= pict.user.name %></p></div>
<p class="resizeimage">
<% if pict.image? %>
<%= image_tag(pict.image) %>
<% end %>
</p>
<br /><div class="row">

  <p><%= pict.content %></p><br>
  <%= link_to "編集", edit_pict_path(pict.id), class: 'btn btn-default btn-sm btn-success' %>
  <%= link_to "削除", pict_path(pict.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
<br /><br />
</div>
<% end %>
<br /><br /><br /><br /><br /><br />
</div>
</div>
